<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".fragments.DonateFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donation_details"
        android:textSize="30sp"
        android:textColor="@color/stratos"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_description"
        android:textSize="20sp"
        android:textColor="@color/sienna"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/format"
        android:id="@+id/foodDescriptionEditText"
        android:padding="@dimen/margin_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_prepared_on"
        android:textSize="20sp"
        android:textColor="@color/sienna"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/your_answer"
        android:id="@+id/foodPreparedOnEditText"
        android:padding="@dimen/margin_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/has_container"
        android:textSize="20sp"
        android:textColor="@color/sienna"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textSize="15sp"
            android:textColor="@color/solidBlue"
            android:padding="@dimen/margin_one_dp"
            android:id="@+id/hasContainerYesRadioButton"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:checked="true"
            android:textSize="15sp"
            android:textColor="@color/solidBlue"
            android:padding="@dimen/margin_one_dp"
            android:id="@+id/hasContainerNoRadioButton"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/sienna"
        android:layout_margin="@dimen/margin_five_dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/state"
        android:textSize="20sp"
        android:textColor="@color/solidBlue"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:id="@+id/spinner"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/city"
        android:textSize="20sp"
        android:textColor="@color/solidBlue"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/enter_city"
        android:id="@+id/cityEditText"
        android:padding="@dimen/margin_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/locality"
        android:textSize="20sp"
        android:textColor="@color/solidBlue"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/enter_locality"
        android:id="@+id/localityEditText"
        android:padding="@dimen/margin_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pin_code"
        android:textSize="20sp"
        android:textColor="@color/solidBlue"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/enter_pin_code"
        android:id="@+id/pinCodeEditText"
        android:maxLength="6"
        android:padding="@dimen/margin_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textSize="30sp"
        android:textColor="@color/stratos"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_ten_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/locate_on_map"
                    android:textAllCaps="true"
                    android:textSize="25sp"
                    android:textColor="@color/sienna"
                    android:layout_margin="@dimen/margin_five_dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:background="@color/white"
                    android:id="@+id/locationButton"
                    android:contentDescription="@string/locate_on_map"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/additional_contact_number"
        android:textSize="20sp"
        android:textColor="@color/sienna"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_five_dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="@string/contact_number"
        android:id="@+id/additionalContactNumberEditText"
        android:padding="@dimen/margin_five_dp"
        android:layout_marginLeft="@dimen/margin_five_dp"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:background="@drawable/edit_text_border"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/submitButton"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:layout_margin="@dimen/margin_five_dp"
        android:background="@drawable/button_background" />

</LinearLayout>